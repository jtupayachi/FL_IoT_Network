{
  "experiment_id": "PLACEHOLDER_ID",
  "algorithm": "PLACEHOLDER_ALGORITHM",
  "description": "NASA CMAPs FL Experiment",
  "run_id": "PLACEHOLDER_RUN_ID",
  "timestamp": "PLACEHOLDER_TIMESTAMP",
  "server": {
    "host": "PLACEHOLDER_HOST",
    "port": PLACEHOLDER_PORT,
    "num_rounds": PLACEHOLDER_ROUNDS
  },

  "strategy": {
    "name": "PLACEHOLDER_ALGORITHM",
    "fraction_fit": 0.4,              
    "fraction_evaluate": 0.4,         
    "min_fit_clients": 8,             
    "min_evaluate_clients": 8,        
    "min_available_clients": 20,      
    "params": {}
  
  },
  "data": {
    "base_path": "PLACEHOLDER_DATA_PATH",
    "num_clients": PLACEHOLDER_TOTAL_CLIENTS,
    "alpha": PLACEHOLDER_ALPHA
  },
  "model": {
    "model_type": "lstm",
    "reduction_type": "kpca",
    "n_components": 5,
    "kernel": "poly",
    "learning_rate": 0.001,
    "batch_size": 32,
    "local_epochs": 100,
    "hidden_dim": 64,
    "num_layers": 2,
    "dropout": 0.3,
    "sequence_length": 10,
    "use_attention": false,
    "optimizer": "adam",
    "weight_decay": 0.0,
    "k_folds": 3,

    "early_stopping_enabled": true,
    "early_stopping_patience": 15,
    "early_stopping_min_delta": 0.0005,
    
    "scheduler_factor": 0.5,
    "scheduler_patience": 5,
    "scheduler_min_lr": 1e-6,
    "scheduler_threshold": 0.0001
  }
}